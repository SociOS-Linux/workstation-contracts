{
  "api_version": "workstation-contracts.socios.io/v0.1",
  "kind": "WorkstationContract",
  "metadata": {
    "id": "pixi-dev",
    "name": "Pixi dev lane",
    "description": "Pixi-first local dev lane."
  },
  "spec": {
    "lanes": [
      {
        "name": "dev",
        "backend": {
          "type": "pixi",
          "pixi": {
            "manifest_path": "pixi.toml",
            "lock_path": "pixi.lock"
          }
        },
        "steps": [
          {
            "name": "smoke",
            "run": "python -V"
          }
        ],
        "evidence": {
          "emit": [
            "deps.inventory",
            "env.fingerprint"
          ]
        }
      }
    ]
  }
}
